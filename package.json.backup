{
  "name": "weather-forecast-tv-board",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.cjs",
  "description": "Aplicación de pronóstico del clima para TV - Provincia del Chaco",
  "author": "Clima TV Chaco",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  },
  "build": {
    "appId": "com.climatv.chaco",
    "productName": "Clima TV Chaco",
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "package.json",
      "icon.ico"
    ],
    "extraResources": [
      {
        "from": "dist/assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    }
  }
}