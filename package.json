{
  "name": "weather-forecast-tv-board",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.climatv.app",
    "productName": "Clima TV Chaco",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "icons/**/*",
      "public/**/*",
      "electron.cjs",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "icon.ico"
    },
    "asarUnpack": [
      "dist/**/*"
    ]
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "electron": "latest",
    "electron-builder": "latest",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
